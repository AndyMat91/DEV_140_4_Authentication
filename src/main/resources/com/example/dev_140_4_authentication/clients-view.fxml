<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.dev_140_4_authentication.controllers.TableClientsController"
      stylesheets="@Style1.css">
    <children>
        <TableView fx:id="table" maxWidth="Infinity" maxHeight="Infinity"
                   VBox.vgrow="ALWAYS" onMouseClicked="#onMouseClicked" onKeyPressed="#onKeyPressed"
                   stylesheets="@Style1.css">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>

            <columns>
                <TableColumn fx:id="idCol" text="Id"/>
                <TableColumn fx:id="jobCol" text="Jobtitle"/>
                <TableColumn fx:id="fioCol" text="Firstnamelastname"/>
                <TableColumn fx:id="phoneCol" text="Phone"/>
                <TableColumn fx:id="emailCol" text="Email"/>
                <TableColumn fx:id="countCol" text="Count domains"/>
            </columns>
        </TableView>
    </children>
</VBox>
